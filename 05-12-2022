n=int(input('How many do you want? '))
num=int(input('Enter any number: '))
largest=num
smallest=num
i=1
while(i<n):
    num=int(input('Enter any number: '))
    if(num>largest):
        largest=num
    i=i+1

while(i>n):
    num=int(input('Enter any number: '))
    if(num<smallest):
        smallest=num
    i=i-1
diff=largest-smallest
print('The difference between the largest and the smallest number is: ',diff)
